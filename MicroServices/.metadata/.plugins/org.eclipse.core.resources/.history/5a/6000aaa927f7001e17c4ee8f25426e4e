package com.myapp.quiz.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.myapp.quiz.dao.QuizRepository;
import com.myapp.quiz.model.QuestionWrapper;
import com.myapp.quiz.model.Response;

@Service
public class QuizService {
	
	@Autowired
	QuizRepository repo;

	public ResponseEntity<String> createQuiz(String category, int numQ, String title) {
		
	//need to modify
	//call generate url of question service using rest template	
		
		return new ResponseEntity<String>(repo.save(null),HttpStatus.CREATED);
	}

	public ResponseEntity<List<QuestionWrapper>> getQuizQuestions(int id) {
		
		//need to modify
		return new ResponseEntity<List<QuestionWrapper>>(HttpStatus.OK);
	}

	public ResponseEntity<Integer> calculateScore(int id, List<Response> responses) {
		//need to modify
		return new ResponseEntity<Integer>(HttpStatus.OK );
	}

}
