package com.myapp.quiz.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.myapp.quiz.dao.QuizRepository;
import com.myapp.quiz.model.QuestionWrapper;

@Service
public class QuizService {
	
	@Autowired
	QuizRepository repo;

	public ResponseEntity<String> createQuiz(String category, int numQ, String title) {
		
	//need to modify
		return new ResponseEntity<String>(repo.save(null),HttpStatus.CREATED);
	}

	public ResponseEntity<List<QuestionWrapper>> getQuizQuestions(int id) {
		
		return new ResponseEntity<List<QuestionWrapper>>(repo.findById(id),HttpStatus.OK);
	}

}
